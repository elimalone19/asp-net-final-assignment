@model Bowlers

<!-- displays the bowlers -->

<li class="list-group-item" style="width: 700px !important;">
    <div class="media align-items-lg-center flex-column flex-lg-row p-1">
        <div class="media-body order-2 order-lg-1">
            <h5 class="mt-0 font-weight-bold mb-1">@Model.TeamID</h5>
            <p class="font-italic text-muted mb-0 small">@Model.BowlerLastName, @Model.BowlerFirstName @Model.BowlerMiddleInit</p>
            <div class="d-flex align-items-center justify-content-between mt-1">
                <h3 class="font-weight-bold my-1"></h3>
            </div>
            <form id="@Model.BowlerID" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="BowlerID" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                </span>
            </form>
            <br />
            <p style="float: right;">@Model.BowlerAddress @Model.BowlerCity, @Model.BowlerState @Model.BowlerZip</p>
            <span class="badge" style="float:left;"></span>
            <span class="badge" style="float:left;"></span>
        </div>
    </div> 
</li>
<br />